                            </Grid.RowDefinitions>
                            <Image Name="xamlImageOnScannerDetect" Grid.Column="1"/>
                            <TextBlock Text="Detect" TextAlignment="Center" Grid.Row="1"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
