<Window x:Class="DermalogMultiScannerDemo.EnterUsernameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Name" Height="100" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox x:Name="xamlTextBoxUsername" Margin="5,5,5,0" />
        <Button x:Name="xamlButtonOK" IsDefault="True" Width="100" HorizontalAlignment="Right" Click="xamlButtonOK_Click" Content="OK" Grid.Row="1" Margin="5" />
    </Grid>
</Window>
